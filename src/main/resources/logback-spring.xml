<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration >

    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter" />
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [ %5p]  [ %-40.40logger{39} ] : [%X{username}] : %m%n%wEx
            </Pattern>
        </layout>
    </appender>
    
     <appender name="ROLLING-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern> %d{yyyy-MM-dd HH:mm:ss.SSS} [ %5p ]   [%t] %-40.40logger{39} : [%X{username}] : %m%n%wEx</pattern>
        </encoder>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>d:/kambaa/milk/log.%d{yyyy-MM-dd-HH-mm}.log</fileNamePattern>
        </rollingPolicy>
    </appender>
    
    <root level="info" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="ROLLING-FILE" />
    </root>
    

</configuration>